<Page
    x:Class="RiskCreditUniversal.Page04"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiskCreditUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF431693" Opacity="0.5" >


        <StackPanel HorizontalAlignment="Left" 
                    Margin="0,0,0,0" 
                    Background="#FF493B3B"
                    Width="850">

            <TextBox  FontSize="25"  
                      Text="Por qual motivo você está fazendo este emprestimo?" 
                      FontWeight="Bold" 
                      Margin="0,0,0,0"
                      Foreground="#FFF1F0F0" BorderBrush="#FF741616" Background="#FF114BE4"/>

            <RadioButton x:ConnectionId='1' x:Name="buttonFinalidade1" 
        		HorizontalAlignment="Left"
        		Content="Carro 0 Km" 
        		VerticalAlignment="Top"
                FontSize="35"
                Foreground="#FFF5E7E7"
                
                FontFamily="Times New Roman"
        		Margin="20,0,0,0" 
                />

            <RadioButton x:ConnectionId='2' x:Name="buttonFinalidade2"
        		    Content="Carro Usado"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
                    FontSize="35"        		
                    Foreground="#FFF5E7E7"                   
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='3' x:Name="buttonFinalidade3"
        		    Content="Mobiliário ou equipamento."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='4' x:Name="buttonFinalidade4"
        		    Content="Rádio ou TV"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='5' x:Name="buttonFinalidade5"
        		    Content="Elétrodomésticos"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='6' x:Name="buttonFinalidade6"
        		    Content="Reparos"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='7' x:Name="buttonFinalidade7"
        		    Content="Educação"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='8' x:Name="buttonFinalidade8"
        		    Content="Férias"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='9' x:Name="buttonFinalidade9"
        		    Content="Reciclagem"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='10' x:Name="buttonFinalidade10"
        		    Content="Negócios"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <RadioButton x:ConnectionId='11' x:Name="buttonFinalidade11"
        		    Content="Outro"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,0,0,0"
            />

            <Ellipse
                Width="150"
                Height="140"
                HorizontalAlignment="Center"
                Margin="0,0,90,0" 
                Fill="#FF1DE426"                
                />

            <Button x:ConnectionId='12' x:Name="buttonStatusContaProxima" 
        		Content="Próxima" 
        		Margin="285,-130,380,0"         		
        		Height="50"               
        		                                        
        		HorizontalAlignment="Center" 
        		Width="150" 
                Foreground="#FFF3F3F3" 
                FontSize="20" 
                FontFamily="Ravie" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                />

        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="430">
            <Image Source="Assets/Imagens/Bank.jpg" 
                   Stretch="Fill" 
                   Height="670"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="380"
                   Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

