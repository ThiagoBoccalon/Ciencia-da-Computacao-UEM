<Page
    x:Class="RiskCreditUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiskCreditUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Imagens/Money_Credit.jpg" Opacity="0.8"/>
        </Grid.Background>

        <StackPanel 
            HorizontalAlignment="Left" 
            Width="880"
            Height="720"
            Margin="0,0,0,0">

            <RadioButton x:ConnectionId='9' x:Name="buttonValorTreina50" 
        		    Content="Obter 50% dos Dados para Treinamento" 
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="50"
                    Foreground="#FFF5E7E7"
                    FontFamily="Times New Roman"
        		    Margin="20,30,0,0"
                />

            <RadioButton x:ConnectionId='10' x:Name="buttonValorTreina75"
        		    Content="Obter 75% dos Dados para Treinamento"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
                    FontSize="50"
                    Foreground="#FFF5E7E7"
                    FontFamily="Times New Roman"
        		    Margin="20,30,0,0"
             />

            <RadioButton x:ConnectionId='11' x:Name="buttonValorTreina90"
        		    Content="Obter 90%  dos Dados para Treinamento"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="50"
                    Foreground="#FFF5E7E7"
                    FontFamily="Times New Roman"
        		    Margin="20,30,0,0"
             />

            <Ellipse Width="200" 
                     Height="200"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Center"
                     Margin="80,200,0,0"
                     Fill="#FF255781" 
                     Opacity="0.7"
                     />
            <Button x:ConnectionId='12' x:Name="buttonPrecissao" 
            	Content="Precisão" 
            	Margin="80,-180,0,0"             	
            	Height="50" 
            	                         
            	HorizontalAlignment="Center" 
            	Width="180"
                BorderBrush="{x:Null}" Background="{x:Null}" 
                Foreground="#FFF3F3F3" 
                FontSize="24" 
                FontFamily="Ravie" 
                />

        </StackPanel>
        <StackPanel
            HorizontalAlignment="Right"
            Width="400"
            Height="720"
            >

            <TextBox
                Text="Matriz de Confusão"
                FontSize="30"            
                HorizontalAlignment="Center" 
                Height="50"
                Width="400"
                Background="#FFE61818" 
                TextAlignment="Center"    
                />

            <TextBox x:ConnectionId='1'
                x:Name="precisaoTextBox"
                Text= ""
                Height="50"
                Width="400"
                FontSize="30"
                HorizontalAlignment="Center"                
                Margin="0,0,0,0"
                TextAlignment="Center"    
                >
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFE04040" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>

            <TextBox x:ConnectionId='2'
                x:Name="falsoPositivoTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <TextBox x:ConnectionId='3'
                x:Name="falsoNegativoTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <TextBox x:ConnectionId='4'
                x:Name="verdadeiroPositivoTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <TextBox x:ConnectionId='5'
                x:Name="verdadeiroNegativoTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <TextBox x:ConnectionId='6'
                x:Name="RecallTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <TextBox x:ConnectionId='7'
                x:Name="AcurracyTextBox"
                Text= "" Background="#FFE04040"
                FontSize="30"
                HorizontalAlignment="Center"
                Width="400"
                Margin="0,0,0,0"
                TextAlignment="Center"
                />

            <Ellipse
                Width="200" 
                Height="200"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0,70,0,0"
                Fill="#FF428125" 
                Opacity="0.7"
                />

            <Button x:ConnectionId='8'
                x:Name="buttonInicio"
                Width="180"
                Height="70"
                HorizontalAlignment="Center"
                Content="Iniciar"                
                Margin="0,-190,0,0"
                                          
                FontSize="24" 
                FontFamily="Ravie" Foreground="#FFFBF4F4" BorderBrush="{x:Null}" Background="{x:Null}" 
                />


        </StackPanel>
    </Grid>
</Page>

