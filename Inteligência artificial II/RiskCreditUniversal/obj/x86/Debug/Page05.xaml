<Page
    x:Class="RiskCreditUniversal.Page05"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiskCreditUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF431693" Opacity="0.5" >


        <StackPanel HorizontalAlignment="Left" 
                    Margin="0,0,0,0" 
                    Background="#FF493B3B"
                    Width="850">

            <TextBox  FontSize="30"  
                      Text="Qual é a quantidade de crédito que pretende emprestar?" 
                      FontWeight="Bold" 
                      Margin="0,0,0,0"
                      Foreground="#FFF1F0F0" BorderBrush="#FF741616" Background="#FF114BE4"/>

            <RadioButton x:ConnectionId='1' x:Name="buttonValorEmprestimo1" 
        		HorizontalAlignment="Left"
        		Content="De € 0,00 até € 1.499,99" 
        		VerticalAlignment="Top"
                FontSize="35"
                Foreground="#FFF5E7E7"
                
                FontFamily="Times New Roman"
        		Margin="20,20,0,0" 
                />

            <RadioButton x:ConnectionId='2' x:Name="buttonValorEmprestimo2"
        		    Content="De €1.500,00 até €4.999,99."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
                    FontSize="35"        		
                    Foreground="#FFF5E7E7"                   
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='3' x:Name="buttonValorEmprestimo3"
        		    Content="De €5.000,00 até €9.499,99"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='4' x:Name="buttonValorEmprestimo4"
        		    Content="De €9.500,00 até €15.499,99"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='5' x:Name="buttonValorEmprestimo5"
        		    Content="De €15.000,00 até €17.999,99"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='6' x:Name="buttonValorEmprestimo6"
        		    Content="De €18.000,00 ou mais."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <Ellipse
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                Margin="0,40,90,0" 
                Fill="#FF1DE426"                
                />

            <Button x:ConnectionId='7' x:Name="buttonStatusContaProxima" 
        		Content="Próxima" 
        		Margin="285,-190,380,0"         		
        		Height="50"               
        		                                        
        		HorizontalAlignment="Center" 
        		Width="150" 
                Foreground="#FFF3F3F3" 
                FontSize="20" 
                FontFamily="Ravie" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                />

        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="430">
            <Image Source="Assets/Imagens/Bank.jpg" 
                   Stretch="Fill" 
                   Height="670"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="380"
                   Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

