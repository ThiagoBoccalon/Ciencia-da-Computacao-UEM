<Page
    x:Class="RiskCreditUniversal.Page03"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiskCreditUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF431693" Opacity="0.5" >


        <StackPanel HorizontalAlignment="Left" 
                    Margin="0,0,0,0" 
                    Background="#FF493B3B"
                    Width="850">

            <TextBox  FontSize="25"  
                      Text="Qual o seu histórico de crédito?" 
                      FontWeight="Bold" 
                      Margin="0,0,0,0"
                      Foreground="#FFF1F0F0" BorderBrush="#FF741616" Background="#FF114BE4"/>

            <RadioButton x:ConnectionId='1' x:Name="buttonHistoricoCredito1" 
        		HorizontalAlignment="Left"
        		Content="Sem emprestimos realizados ou todos os feitos foram pagos devidamente." 
        		VerticalAlignment="Top"
                FontSize="35"
                Foreground="#FFF5E7E7"
                
                FontFamily="Times New Roman"
        		Margin="20,0,0,0" 
                />

            <RadioButton x:ConnectionId='2' x:Name="buttonHistoricoCredito2"
        		    Content="Todos os emprestimos tomados neste Banco foram pagos devidamente."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
                    FontSize="35"        		
                    Foreground="#FFF5E7E7"                   
                    FontFamily="Times New Roman"
                    Margin="20,2,0,0"
            />

            <RadioButton x:ConnectionId='3' x:Name="buttonHistoricoCredito3"
        		    Content="Emprestimos realizados ainda sendo pagos, mas devidamente."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,2,0,0"
            />

            <RadioButton x:ConnectionId='4' x:Name="buttonHistoricoCredito4"
        		    Content="De 54 meses a 71 meses."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,2,0,0"
            />

            <RadioButton x:ConnectionId='5' x:Name="buttonHistoricoCredito5"
        		    Content="Os últimos emprestimos realizados houve atraso no pagamento."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,2,0,0"
            />

            <RadioButton x:ConnectionId='6' x:Name="buttonHistoricoCredito6"
        		    Content="Emprestimos realizados em outros lugares sem ser em Bancos."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="35"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,2,0,0"
            />

            <Ellipse
                Width="135"
                Height="135"
                HorizontalAlignment="Center"
                Margin="0,20,90,0" 
                Fill="#FF1DE426"                
                />

            <Button x:ConnectionId='7' x:Name="buttonStatusContaProxima" 
        		Content="Próxima" 
        		Margin="285,-130,380,0"         		
        		Height="50"               
        		                                        
        		HorizontalAlignment="Center" 
        		Width="150" 
                Foreground="#FFF3F3F3" 
                FontSize="18" 
                FontFamily="Ravie" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                />

        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="430">
            <Image Source="Assets/Imagens/Bank.jpg" 
                   Stretch="Fill" 
                   Height="670"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="380"
                   Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

