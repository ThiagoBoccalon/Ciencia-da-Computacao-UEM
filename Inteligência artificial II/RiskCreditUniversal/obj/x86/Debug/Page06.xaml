<Page
    x:Class="RiskCreditUniversal.Page06"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RiskCreditUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF431693" Opacity="0.5" >
        <StackPanel HorizontalAlignment="Left" 
                    Margin="0,0,0,0" 
                    Background="#FF493B3B"
                    Width="850">

            <TextBox  FontSize="30"  
                      Text="Qual o valor que você tem na conta poupança?" 
                      FontWeight="Bold" 
                      Margin="0,0,0,0"
                      Foreground="#FFF1F0F0" BorderBrush="#FF741616" Background="#FF114BE4"/>

            <RadioButton x:ConnectionId='1' x:Name="buttonContaPoupanca1" 
        		HorizontalAlignment="Left"
        		Content="De €0,00 até €99,99" 
        		VerticalAlignment="Top"
                FontSize="40"
                Foreground="#FFF5E7E7"
                
                FontFamily="Times New Roman"
        		Margin="20,20,0,0" 
                />

            <RadioButton x:ConnectionId='2' x:Name="buttonContaPoupanca2"
        		    Content="De €100,00 até €499,99."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
                    FontSize="40"        		
                    Foreground="#FFF5E7E7"                   
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='3' x:Name="buttonContaPoupanca3"
        		    Content="De €500,00 até €999,99"
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="40"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='4' x:Name="buttonContaPoupanca4"
        		    Content="De €1.000,00 ou mais."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="40"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />

            <RadioButton x:ConnectionId='5' x:Name="buttonContaPoupanca5"
        		    Content="Não possui conta Poupança."
        		    HorizontalAlignment="Left"
        		    VerticalAlignment="Top"
        		    FontSize="40"
                    Foreground="#FFF5E7E7"                    
                    FontFamily="Times New Roman"
                    Margin="20,20,0,0"
            />


            <Ellipse
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                Margin="0,80,90,0" 
                Fill="#FF1DE426"                
                />

            <Button x:ConnectionId='6' x:Name="buttonStatusContaProxima" 
        		Content="Próxima" 
        		Margin="285,-190,380,0"         		
        		Height="50"               
        		                                        
        		HorizontalAlignment="Center" 
        		Width="150" 
                Foreground="#FFF3F3F3" 
                FontSize="20" 
                FontFamily="Ravie" 
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                />

        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="430">
            <Image Source="Assets/Imagens/Bank.jpg" 
                   Stretch="Fill" 
                   Height="670"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="380"
                   Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

