-- SOMADOR COMPLETO DE 1 BIT
LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY SOMADOR IS
	PORT (A_B_Cin: IN BIT_VECTOR (0 TO 2);   -- A = (0), B(1), Cin(2)
		
		  S, C_Out: OUT BIT); -- DA UMA VERIFICADA AQUI MAS ACHO QUE É SÓ 1 BIT QUE SAI
END SOMADOR;

-- O SOMADOR DEVE SER FEITO USANDO WHITE SELECT WHEN

ARCHITECTURE TEST_SOMADOR OF SOMADOR IS
	BEGIN
		WITH A_B_Cin SELECT
			S <= A_B_Cin (0) WHEN "000" | "011",  -- INICIO DOS CASOS EM QUE S <= "0"  
				 A_B_Cin (1) WHEN "101",
				 A_B_Cin (2) WHEN "110",	-- FIM DOS CASOS S <= '0'
				 A_B_Cin (2) WHEN "001",	-- INICIO DOS CAOS EM QUE S <= "1" 
				 A_B_Cin (1) WHEN "010",
				 A_B_Cin (0) WHEN "100" | "111"; -- FIM DOS CAOS S <= "1"
			
			WITH A_B_Cin SELECT			
			C_Out <= A_B_Cin (0) WHEN "000" | "001" | "010", -- COMEÇO DOS CASOS EM QUE C <= "0'
				 A_B_Cin (2) WHEN "100",	-- FIM DOS CASOS C <= "0"
				 A_B_Cin (1) WHEN "011" | "110", -- COMEÇO DOS CASOS EM QUE              
				 A_B_Cin (0) WHEN "101" | "111"; -- 
END TEST_SOMADOR;