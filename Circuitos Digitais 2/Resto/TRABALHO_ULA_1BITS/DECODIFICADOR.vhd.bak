-- DECODIFICADOR DE 3 ENTRADAS

LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY DECODIFICADOR IS
	PORT(EN_DC: IN BIT; -- SÃO AS ENTRADAS F1, F2 & F3 DO CIRCUITO
		 S_OA1,S_OA2: OUT BIT; -- SÃO SAIDAS PARA OPPERAÇÕES ARITIMÉTICAS
		 S_PC1, S_PC2, S_PC3, S_PC4, S_PC5, S_PC6: OUT BIT); -- SÃO AS SAÍDAS PARA AS PORTAS DE CONTROLE
END DECODIFICADOR;

-- O DECO DEVE SER FEITO UTILIZANDO CASE WHEN

ARCHITECTURE TEST_DECODIFICADOR OF DECODIFICADOR IS
BEGIN
		PROCESS(EN_DC)
		BEGIN
				CASE EN_DC IS
					WHEN "000" => S_PC6 <= '1';
					WHEN "001" => S_PC5 <= '1';
					WHEN "010" => S_PC4 <= '1';
					WHEN "011" => S_PC3 <= '1';
					WHEN "100" => S_PC2 <= '1';
					WHEN "101" => S_PC1 <= '1';
					WHEN "110" => S_OA2 <= '1';
					WHEN "111" => S_OA1 <= '1';
				END CASE;
		END PROCESS;
END TEST_DECODIFICADOR;